
@model DSDESBMVCRazor.Models.LogOnModel


@{
    ViewBag.Title = "Login";
}


<script src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.9/jquery.validate.min.js" type="text/javascript"></script>
<script src="http://ajax.aspnetcdn.com/ajax/mvc/3.0/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>


<!--[if !IE]><!-->
<link href="@Url.Content("~/Content/style-login.css")" rel="Stylesheet" type="text/css" />
<!--<![endif]-->
<!--[if IE]>
<meta http-equiv="X-UA-Compatible" content="IE=9" />
<link href="@Url.Content("~/Content/style-login-ie.css")" rel="Stylesheet" type="text/css" />
<![endif]-->


<div class="login-form-container">
    <div class="header">
        <h2>Login</h2>
    </div>

    <center>
        @Html.ValidationSummary(true, "Login was unsuccessful. Please correct the errors and try again.")
    </center>


    @using (Html.BeginForm())
    {
        <div>
            <fieldset>
                <legend>Account Information</legend>


                <div class="editor-label">
                    @Html.LabelFor(m => m.Usuario)
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(m => m.Usuario)
                    <div class="validation-line">@Html.ValidationMessageFor(m => m.Usuario)</div>
                </div>


                <div class="editor-label">
                    @Html.LabelFor(m => m.Contrasena)
                </div>
                <div class="editor-field">
                    @Html.PasswordFor(m => m.Contrasena)
                    <div class="validation-line">@Html.ValidationMessageFor(m => m.Contrasena )</div>
                </div>


                <p>
                    <input type="submit" value="Log On" />
                </p>
            </fieldset>
        </div>
    }
</div>


<script>
    document.body.style.backgroundColor = '#c0c0c0';
</script>

