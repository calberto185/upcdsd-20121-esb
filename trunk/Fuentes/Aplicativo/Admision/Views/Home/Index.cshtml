@model Admision.Models.LogOnModel

@{
    ViewBag.Title = "Inicio de Sesión";
}


<script src="~/Scripts/jquery.validate.min.js" 
type="text/javascript"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"
type="text/javascript"></script>

<!--[if !IE]><!-->
<link href="@Url.Content("~/Content/style-login.css")" 
rel="Stylesheet" type="text/css" />
<!--<![endif]-->
<!--[if IE]>
<meta http-equiv="X-UA-Compatible" content="IE=9" />
<link href="@Url.Content("~/Content/style-login-ie.css")" 
rel="Stylesheet" type="text/css" />
<![endif]-->

<div class="login-form-container">
    <div class="header">
        <h2>Inicio de sesión</h2>
    </div>

    <center>
        @Html.ValidationSummary(true, "No se ha podido iniciar sesión correctamente, por favor revisar y volver a intentar")
    </center>

    @using (Html.BeginForm())
    {
        <div>
            <fieldset>
                <legend>Información de cuenta</legend>

                <div class="editor-label">
                    @Html.LabelFor(m => m.Usuario)
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(m => m.Usuario)
                    <div class="validation-line">
@Html.ValidationMessageFor(m => m.Usuario)</div>
                </div>

                <div class="editor-label">
                    @Html.LabelFor(m => m.Contrasena)
                </div>
                <div class="editor-field">
                    @Html.PasswordFor(m => m.Contrasena )
                    <div class="validation-line">
@Html.ValidationMessageFor(m => m.Contrasena)</div>
                </div>

                <p>
                   @Html.ActionLink("Acceder","ConsultaReniec","Paciente")
                    
                </p>
            </fieldset>
        </div>
    }
</div>

<script type="text/javascript">
    document.body.style.backgroundColor = '#c0c0c0';
</script>